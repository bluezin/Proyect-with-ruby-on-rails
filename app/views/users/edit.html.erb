<div class="smaller-containe center-block">
<p class="smaller-containe text-uppercase margin-top">Editando usuario</p>
<%=image_tag url_for(current_user.avatar), height:200 %>
<%= form_with(model: current_user, local: true) do |form| %>
    
    <div class="field">
<%= form.label :avatar %>
<%= form.file_field :avatar %>
    </div>

    <div class="field">
    <%=form.submit "Save", class: "btn btn-primary"%>
    </div>
    <%end%>

</div>
